<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="Error Validation Suite">
    <groups>
        <run>
            <include name="ErrorHandling"/>
        </run>
    </groups>

    <test thread-count="1" name="Standalone Test">
        <classes>
            <class name="StandaloneTest"></class>
        </classes>
    </test>

    <test thread-count="1" name="Submit Order Test">
        <classes>
            <class name="SubmitOrderTest"></class>
        </classes>
    </test>
</suite>